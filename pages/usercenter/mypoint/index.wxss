.container {
  position: relative;
  width: 100%;
  height: 100vh;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  /* 将图片置于底层 */
}


.header-nav {
  width: 100%;
  text-align: center;
  position: absolute;
  font-weight: bold;
  left: 0;
  top: 0;
  z-index: 99;
}

.header-left {
  position: absolute;
  cursor: pointer;
  left: 10px;
  bottom: 10px;
  font-size: 25px;
}

.header-middle {
  width: 80px;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: 15px;
}

.footer {
  /* background-color: #026a8f; */
  /* color: #fff; */
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: calc(80px + env(safe-area-inset-bottom));
  z-index: 99;
  margin-top: 40rpx;
}

.card-container {
  width: 100%;
  justify-content: space-between;
  margin-bottom: 26rpx;
}

.card-container .card {
  margin-left: 25rpx;
  margin-bottom: 20rpx  ;
  width: 700rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);
}


.meta .count {
  font-weight: bold;
}

.meta .name {
  font-size: 25rpx;
  color: gray;
}

.card-container .card .icon {
  width: 72rpx;
  height: 72rpx;
}

